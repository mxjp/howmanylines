{
	"name": "howmanylines",
	"version": "2.0.1",
	"description": "Simple line counter.",
	"main": "dist/node/index.js",
	"bin": "dist/node/cli.js",
	"scripts": {
		"compile": "tsc",
		"compile:watch": "tsc -w",
		"test": "tsc -p tsconfig-test.json && nyc -- ava -v",
		"watch": "concurrently -n tsc,ava \"tsc -w -p tsconfig-test.json\" \"ava -wv\"",
		"prepack": "rimraf dist && npm run compile"
	},
	"dependencies": {
		"@phylum/command": "^1.2.0",
		"ansi-colors": "^3.2.4",
		"color-support": "^1.1.3",
		"fs-extra": "^7.0.1",
		"ignore": "^5.1.1",
		"pretty-bytes": "^5.1.0",
		"table": "^5.2.3",
		"utf-8-validate": "^5.0.2"
	},
	"devDependencies": {
		"@types/ansi-colors": "^3.2.0",
		"@types/fs-extra": "^5.0.5",
		"@types/node": "^11.13.7",
		"@types/pretty-bytes": "^5.1.0",
		"@types/table": "^4.0.5",
		"ava": "^1.4.1",
		"concurrently": "^4.1.0",
		"nyc": "^14.0.0",
		"rimraf": "^2.6.3",
		"typescript": "^3.4.4"
	},
	"ava": {
		"files": [
			"dist/test/test/**/*.js"
		]
	},
	"nyc": {
		"exclude": [
			"dist/test/test"
		]
	},
	"repository": "github:mxjp/howmanylines",
	"author": "Max J. Polster",
	"license": "MIT"
}
